<div class="jumbotron">
    <h2>Elija la forma de visualización</h2>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Seleccionar la forma de visualización", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("optionsVisualization", (SelectList)ViewBag.optionsVisualization, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
<div class="form-group">
    @Html.Label("confirmar método de visualización  ", htmlAttributes: new { @class = "control-label col-md-2" })
<div class="col-md-10">
    @Html.CheckBox("confirmed", false, htmlAttributes: new { @class = "form-control" })

</div>
</div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Mostrar reporte" class="btn-sm" style="background-color:green; color:white" />
        </div>
    </div>
</div>
}

